%input.form-control#search{:placeholder=>"Search...",:type=>"search"}
.container-fluid
  .span6.content
    %br
    #messages-wrapper
      -@messages.each do |message|
        -if message.user_id==current_user.id
          %pre.message.to
            %p.message_login{"data-target"=>"#myModal", "data-toggle"=>"modal"}#{message.user.login}

            .message_body
              =message.body
            %span.pull-right.time
              =message.created_at.strftime("%a %T")
        -else
          %pre.message.from
            .message_login
              %p{"data-target"=>"#myModal", "data-toggle"=>"modal"}#{message.user.login}
            .message_body
              =message.body
            %span.pull-right.time
              =message.created_at.strftime("%a %T")
    %br
    .navbar-fixed-bottom.row-fluid
      %textarea.form-control#message
      %button.btn.btn-success#send_message
        Send message
.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel",role: "dialog", tabindex: "-1", id:"myModal"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
        %h4#myModalLabel.modal-title Profile
        .modal-body
          User info
        .modal-footer
          %button.btn.btn-default{"data-dismiss" => "modal", type: "button"} Close
