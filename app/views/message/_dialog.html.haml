.content
  .alert.alert-success.top-alert
    Welcome! Send this link to coworkers who need accounts:
  .pag
    .glyphicon.glyphicon-chevron-up
  .chat#messages-wrapper
    -##messages-wrapper
    - if @messages
      -@messages.each do |message|
        -if message.user_id==current_user.id
          %li.from.clearfix
            %span.chat-img.pull-left
              =image_tag avatar_url(message.user,50),:class => "avatar"
            .chat-body.clearfix
              .header
                %strong.primary-font
                  =link_to message.user.login, user_path(message.user.id)
                %small.pull-right.text-muted
                  %span.glyphicon.glyphicon-time
                  =message.created_at.strftime("%a %T")
              %p= message.body
        -else
          %li.to.clearfix
            %span.chat-img.pull-left
              =image_tag avatar_url(message.user,50),:class => "avatar"
            .chat-body.clearfix
              .header
                %strong.primary-font
                  =link_to message.user.login, user_path(message.user.id)
                %small.pull-right.text-muted
                  %span.glyphicon.glyphicon-time
                  =message.created_at.strftime("%a %T")
              %p=message.body
  .input
    %form{:action => "", :method => "get", :name => "messageForm"}
      %table{:cellspacing => "0", :width => "100%"}
        %tbody
          %tr
            %td
              .textwrapper
                %textarea#message_input{:autocomplete => "off"}
            %td.up-pl-wrap{:width => "10%"}
              %span.glyphicon.glyphicon-ok.ok
              %label.upload-place
                %input#upload-file{:type => "file"}
            %td{:width => "1%"}
              %label.upload-but{:for => "upload-file"}
                %span.glyphicon.glyphicon-paperclip
            %td{:width => "1%"}
              %button.form-but#send_message{:type => "button"}
                %span.glyphicon.glyphicon-thumbs-up