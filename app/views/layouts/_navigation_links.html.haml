-if user_signed_in?
  %li
    = link_to 'Users', users_path
  %li.dropdown.user-dropdown
    %a.dropdown-toggle{:data=>{:toggle=>"dropdown"}}
      %i.fa.fa-user
      =current_user.firstname
      %b.caret
    %ul.dropdown-menu
      %li
        = link_to 'Edit account', edit_user_registration_path
      %li.divider
      %li
        = link_to 'Logout', destroy_user_session_path, :method=>'delete'
-else
  %li
    = link_to 'Login', new_user_session_path
  %li
    = link_to 'Sign up', new_user_registration_path
  %li
    = link_to  user_omniauth_authorize_path(:facebook), class: 'navbar-brand' do
      %img{:src=>"../img/facebook.png",:class=>"social-button"}
      Sign in with facebook
  %li
    = link_to user_omniauth_authorize_path(:google_oauth2), class: 'navbar-brand' do
      %img{:src=>"../img/google.png", :class=>"social-button"}
      Sign in with google
  %li
    = link_to user_omniauth_authorize_path(:github), class: 'navbar-brand' do
      %img{:src=>"../img/github.jpg", :class=>"social-button"}
      Sign in with github
