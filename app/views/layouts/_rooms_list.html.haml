%body
  %aside.left
    %h1.logo
      %a{:href => "/"}
        %img{:alt => "SBS", :src => "../img/logo.png"}
    %nav.lobby-panel
      %ul#tabs.tabs.ui-sortable
        %li#tab_lobby.selected
          %a.open{:href => rooms_path}
            %span.glyphicon.glyphicon-th-list>
            Lobby
          - if !@room_list.nil?
            - @room_list.each do |room|
              - if room.id==@room_id.to_i
                %li.active
                  =link_to "#{room.name}",room_path(:id=>room.id),:room_id => room.id
                  -#%a.close.glyphicon.glyphicon-remove-circle{:href => "#"}
              -else
                %li
                  =link_to "#{room.name}",room_path(:id=>room.id), :room_id => room.id
                  -#%a.close.glyphicon.glyphicon-remove-circle{:href => "#"}

  %aside.right
    .top-form
      .dropdown
        %button#drop3.btn.btn-default.dropdown-toggle.tf-but{"data-toggle" => "dropdown", :type => ""}
          %span.glyphicon.glyphicon-search
        %form.dropdown-menu.search-form{:action => "/", "aria-labelledby" => "drop3", :method => "get", :role => "menu"}
          %input{:name => "search", :placeholder => "Search", :type => "search"}
            %button{:type => "submit"}
              %span.glyphicon.glyphicon-record
      .dropdown
        %button#drop2.btn.btn-default.dropdown-toggle.tf-but{"data-toggle" => "dropdown", :role => "button"}
          Room actions
          %span.caret
        %ul.dropdown-menu.room-action{"aria-labelledby" => "drop2", :role => "menu"}
          %li
            %a{:href => "#", :tabindex => "-1"} Action
          %li
            %a{:href => "#", :tabindex => "-1"} Another action
          %li
            %a{:href => "#", :tabindex => "-1"} Else remark
    .list
      .member
        %span.glyphicon.glyphicon-eye-open.drop-av
        %a{:href => "#"} Name
      .member
        %span.glyphicon.glyphicon-eye-open.drop-away
        %a{:href => "#"} Name
      .member
        %span.glyphicon.glyphicon-eye-open{:style => "color:#999;"}
        %a{:href => "#"} Name
      .member
        %span.glyphicon.glyphicon-lock{:style => "color:#666;"}
        %a{:href => "#"} Name
      .member
        %span.glyphicon.glyphicon-phone{:style => "color:#666;"}
        %a{:href => "#"} Name
    .footer